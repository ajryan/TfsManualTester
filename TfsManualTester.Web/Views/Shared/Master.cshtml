@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - TfsManualTester</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/bundles/bootstrap-css")
    @RenderSection("styles", required: false)
    
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                @Html.ActionLink("TfsManualTester", "Login", "Access", null, new { @class =  "brand" })
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li class="active">@Html.ActionLink("Login", "Login", "Access")</li>
                        <li>@Html.ActionLink("Edit Test", "Edit", "Test")</li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div class="container-fluid">
        @RenderBody()
    </div>
    @Scripts.Render(
        "~/bundles/jquery",
        "~/bundles/bootstrap-js",
        "~/bundles/knockout",
        "~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
